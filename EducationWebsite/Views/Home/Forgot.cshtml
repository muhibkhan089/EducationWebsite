<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>:: Swift - University Admin ::</title>
    <!-- Favicon-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <!-- Custom Css -->
    @Styles.Render("~/Content/LayoutLibCss")
    @Styles.Render("~/Content/LoginCss")
</head>

<body class="login-page authentication">
    <div class="container">
        <div class="card-top"></div>
        <div class="card">
            <h1 class="title"><span>Swift University</span>Forgot Password? <div class="msg">Enter your e-mail address below to reset your password.</div></h1>
            <div class="col-md-12">
                <form id="sign_in" method="POST">
                    <div class="input-group">
                        <span class="input-group-addon"> <i class="zmdi zmdi-email"></i> </span>
                        <div class="form-line">
                            <input type="email" class="form-control" name="email" placeholder="Email" required autofocus>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 text-center">
                            <a href="@Url.Action("Index","Home")" class="btn btn-raised waves-effect g-bg-blush2" type="submit">RESET MY PASSWORD</a>
                        </div>
                        <div class="col-xs-12 text-center"> <a href="@Url.Action("Login","Home")">Sign In!</a> </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="theme-bg"></div>
    <!-- Jquery Core Js -->
    @Scripts.Render("~/bundles/LayoutLibJs")
    @Scripts.Render("~/bundles/ForgotJs")
</body>


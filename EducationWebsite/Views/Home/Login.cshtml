
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<!-- Mirrored from thememakker.com/swift/university/sign-in.html by HTTrack Website Copier/3.x [XR&CO'2014], Thu, 09 Nov 2017 05:57:19 GMT -->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>:: Swift - University Admin ::</title>
    <!-- Favicon-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <!-- Custom Css -->
    @Styles.Render("~/Content/LayoutLibCss")
    @Styles.Render("~/Content/LoginCss")
</head>
<body class="login-page authentication">

    <div class="container">
        <div class="card-top"></div>
        <div class="card">
            <h1 class="title"><span>Swift University</span>Login <span class="msg">Sign in to start your session</span></h1>
            <div class="col-md-12">
                <form id="sign_in" method="POST">

                    <div class="input-group">
                        <span class="input-group-addon"> <i class="zmdi zmdi-account"></i> </span>
                        <div class="form-line">
                            <input type="text" class="form-control" name="username" placeholder="Username" required autofocus>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"> <i class="zmdi zmdi-lock"></i> </span>
                        <div class="form-line">
                            <input type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>
                    </div>
                    <div>
                        <div class="">
                            <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                            <label for="rememberme">Remember Me</label>
                        </div>
                        <div class="text-center">
                            <a href="@Url.Action("Index","Home")" class="btn btn-raised waves-effect g-bg-blush2">SIGN IN</a>
                            <a href="@Url.Action("SignUp","Home")" class="btn btn-raised waves-effect">SIGN UP</a>
                        </div>
                        <div class="text-center"> <a href="@Url.Action("Forgot","Home")">Forgot Password?</a></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="theme-bg"></div>

    <!-- Jquery Core Js -->
    @Scripts.Render("~/bundles/LayoutLibJs")
    @Scripts.Render("~/bundles/LoginJs")
</body>


</html>
